<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuanchen.system.sysrole.mapper.SysRoleMapper">
    <!-- 回收站 列表 -->
    <select id="listRecycleBin" resultType="com.xuanchen.system.sysrole.entity.SysRole">
        SELECT
        id,
        role_code,
        role_name,
        role_description
        FROM
        sys_role
        WHERE
        del_flag = 1
        <if test="sysRole.roleName != '' and sysRole.roleName != null">
            <bind name="roleName" value="'%' + sysRole.roleName + '%'"/>
            AND role_name like #{roleName}
        </if>
        <if test="sysRole.roleDescription != '' and sysRole.roleDescription != null">
            <bind name="roleDescription" value="'%' + sysRole.roleDescription + '%'"/>
            AND role_description like #{roleDescription}
        </if>
    </select>
    <!-- 回收站 彻底删除 -->
    <delete id="deleteRecycleBin">
        DELETE FROM sys_role
        WHERE
        del_flag = 1
        AND id in
        <foreach collection="sysRoleIds" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <!-- 回收站 彻底删除 用户 角色 关系 -->
    <delete id="deleteUserRole">
        DELETE FROM sys_user_role
        WHERE
        role_id in
        <foreach collection="sysRoleIds" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <!-- 回收站 彻底删除 角色 权限 关系 -->
    <delete id="deleteRoleMenu">
        DELETE FROM sys_role_menu
        WHERE
        role_id in
        <foreach collection="sysRoleIds" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <!-- 回收站 还原 -->
    <update id="revertRecycleBin">
        UPDATE sys_role set del_flag = 0
        WHERE
        del_flag = 1
        AND id in
        <foreach collection="sysRoleIds" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>